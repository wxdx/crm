<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wkcto.crm.settings.dao.UserDao">
    <select id="checkLoginAct" resultType="Integer">
        select count(*)
        from
        tbl_user
        where
        loginAct=#{loginAct}
    </select>

    <insert id="save" parameterType="User">
        insert into
        tbl_user
        (id,loginAct,name,loginPwd,email,expireTime,lockState,deptCode,allowIps,createTime,createBy,editTime,editBy)
        values
        (#{id},#{loginAct},#{name},#{loginPwd},#{email},#{expireTime},#{lockState},#{deptCode},#{allowIps},#{createTime},#{createBy},#{editTime},#{editBy})
    </insert>
    <select id="getLoginActAndLoginPwd" resultType="User">
        select *
        from
        tbl_user
        where loginAct = #{arg0} and loginPwd = #{arg1}
    </select>

</mapper>