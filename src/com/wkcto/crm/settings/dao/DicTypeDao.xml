<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wkcto.crm.settings.dao.DicTypeDao">
    <select id="doCheckCode" resultType="Integer">
        select
          count(*)
        from
          tbl_dic_type
        where
          code = #{code}
    </select>
    <insert id="doSave" parameterType="DicType">
         insert into
            tbl_dic_type
         (code,name,description)
            values
         (#{code},#{name},#{description})
    </insert>
    <select id="doGetTypeList" resultType="DicType">
        select
          code,name,description
        from
          tbl_dic_type
    </select>
    <select id="doGetOne" resultType="DicType">
        select
          *
        from
          tbl_dic_type
        where
          code = #{code}
    </select>
    <update id="doUpdate" parameterType="Map">
        update
          tbl_dic_type
        set
          code=#{code},name=#{name},description=#{description}
        where
          code=#{oldCode}
    </update>
    <delete id="doDelete">
        delete from
        tbl_dic_type
        where code in
        <foreach collection="array" item="code" open="(" separator="," close=")">
            #{code}
        </foreach>
    </delete>

</mapper>