<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!-- 欢迎页 -->
    <welcome-file-list>
        <welcome-file>welcome.do</welcome-file>
    </welcome-file-list>
    
    <listener>
        <listener-class>com.wkcto.crm.web.SystemInitListener</listener-class>
    </listener>

    <!-- 字符集过滤器 -->
    <filter>
        <filter-name>encoding</filter-name>
        <filter-class>com.wkcto.crm.web.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>encoding</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

    <!-- 登录过滤器 -->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.wkcto.crm.web.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>


    <!-- 欢迎页Sevlet -->
    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>com.wkcto.crm.web.controller.WelcomeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/welcome.do</url-pattern>
    </servlet-mapping>


    <!-- 字典类型表 -->
    <servlet>
        <servlet-name>dicType</servlet-name>
        <servlet-class>com.wkcto.crm.settings.web.controller.DicTypeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dicType</servlet-name>
        <url-pattern>/settings/dictionary/type/list.do</url-pattern>
        <url-pattern>/settings/dictionary/type/checkCode.do</url-pattern>
        <url-pattern>/settings/dictionary/type/save.do</url-pattern>
        <url-pattern>/settings/dictionary/type/getOneType.do</url-pattern>
        <url-pattern>/settings/dictionary/type/update.do</url-pattern>
        <url-pattern>/settings/dictionary/type/delete.do</url-pattern>
    </servlet-mapping>


    <!-- 字典值表 -->
    <servlet>
        <servlet-name>dicValue</servlet-name>
        <servlet-class>com.wkcto.crm.settings.web.controller.DicValueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dicValue</servlet-name>
        <url-pattern>/settings/dictionary/value/getType.do</url-pattern>
        <url-pattern>/settings/dictionary/value/save.do</url-pattern>
        <url-pattern>/settings/dictionary/value/list.do</url-pattern>
        <url-pattern>/settings/dictionary/value/getOneValue.do</url-pattern>
        <url-pattern>/settings/dictionary/value/update.do</url-pattern>
        <url-pattern>/settings/dictionary/value/delete.do</url-pattern>
        <url-pattern>/settings/dictionary/value/checkValue.do</url-pattern>
        <url-pattern>/settings/dictionary/value/getTypeName.do</url-pattern>
    </servlet-mapping>

    <!-- 部门表 -->
    <servlet>
        <servlet-name>Dept</servlet-name>
        <servlet-class>com.wkcto.crm.settings.web.controller.DeptController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Dept</servlet-name>
        <url-pattern>/settings/dept/checkNo.do</url-pattern>
        <url-pattern>/settings/dept/add.do</url-pattern>
        <url-pattern>/settings/dept/getList.do</url-pattern>
        <url-pattern>/settings/dept/getOne.do</url-pattern>
        <url-pattern>/settings/dept/update.do</url-pattern>
        <url-pattern>/settings/dept/delete.do</url-pattern>
    </servlet-mapping>


    <!-- 用户表 -->
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>com.wkcto.crm.settings.web.controller.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/settings/qx/user/getDeptList.do</url-pattern>
        <url-pattern>/settings/qx/user/checkLoginAct.do</url-pattern>
        <url-pattern>/settings/qx/user/save.do</url-pattern>
    </servlet-mapping>


    <!-- 登录 -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.wkcto.crm.web.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>

    <!-- 市场活动 -->
    <servlet>
        <servlet-name>activity</servlet-name>
        <servlet-class>com.wkcto.crm.workbench.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>activity</servlet-name>
        <url-pattern>/workbench/activity/getOwner.do</url-pattern>
        <url-pattern>/workbench/activity/save.do</url-pattern>
        <url-pattern>/workbench/activity/page.do</url-pattern>
        <url-pattern>/workbench/activity/edit.do</url-pattern>
        <url-pattern>/workbench/activity/update.do</url-pattern>
        <url-pattern>/workbench/activity/delete.do</url-pattern>
        <url-pattern>/workbench/activity/detail.do</url-pattern>
        <url-pattern>/workbench/activity/getRemarkList.do</url-pattern>
        <url-pattern>/workbench/activity/remarkSave.do</url-pattern>
        <url-pattern>/workbench/activity/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/activity/updateRemark.do</url-pattern>
        <url-pattern>/workbench/activity/exportAll.do</url-pattern>
        <url-pattern>/workbench/activity/exportCheckAll.do</url-pattern>
        <url-pattern>/workbench/activity/import.do</url-pattern>
    </servlet-mapping>


    <!-- 线索 -->
    <servlet>
        <servlet-name>clue</servlet-name>
        <servlet-class>com.wkcto.crm.workbench.controller.ClueController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clue</servlet-name>
        <url-pattern>/workbench/clue/getAllUser.do</url-pattern>
        <url-pattern>/workbench/clue/save.do</url-pattern>
        <url-pattern>/workbench/clue/page.do</url-pattern>
        <url-pattern>/workbench/clue/detail.do</url-pattern>
        <url-pattern>/workbench/clue/getOne.do</url-pattern>
        <url-pattern>/workbench/clue/update.do</url-pattern>
        <url-pattern>/workbench/clue/delete.do</url-pattern>
        <url-pattern>/workbench/clue/exportAll.do</url-pattern>
        <url-pattern>/workbench/clue/exportCheckAll.do</url-pattern>
        <url-pattern>/workbench/clue/import.do</url-pattern>
        <url-pattern>/workbench/clue/getRemarkList.do</url-pattern>
        <url-pattern>/workbench/clue/remarkSave.do</url-pattern>
        <url-pattern>/workbench/clue/updateRemark.do</url-pattern>
        <url-pattern>/workbench/clue/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/clue/getActivity.do</url-pattern>
        <url-pattern>/workbench/clue/getNeverRelationActivity.do</url-pattern>
        <url-pattern>/workbench/clue/relationClueAndActivity.do</url-pattern>
        <url-pattern>/workbench/clue/dissociated.do</url-pattern>
        <url-pattern>/workbench/clue/convert.do</url-pattern>
        <url-pattern>/workbench/clue/getActivity1.do</url-pattern>
        <url-pattern>/workbench/clue/sendEmail.do</url-pattern>
    </servlet-mapping>

    <!-- 客户  -->
    <servlet>
        <servlet-name>customer</servlet-name>
        <servlet-class>com.wkcto.crm.workbench.controller.CustomerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>customer</servlet-name>
        <url-pattern>/workbench/customer/page.do</url-pattern>
        <url-pattern>/workbench/customer/save.do</url-pattern>
        <url-pattern>/workbench/customer/getOne.do</url-pattern>
        <url-pattern>/workbench/customer/update.do</url-pattern>
        <url-pattern>/workbench/customer/delete.do</url-pattern>
        <url-pattern>/workbench/customer/exportAll.do</url-pattern>
        <url-pattern>/workbench/customer/exportCheckAll.do</url-pattern>
        <url-pattern>/workbench/customer/import.do</url-pattern>
        <url-pattern>/workbench/customer/detail.do</url-pattern>
        <url-pattern>/workbench/customer/getRemarkList.do</url-pattern>
        <url-pattern>/workbench/customer/remarkSave.do</url-pattern>
        <url-pattern>/workbench/customer/updateRemark.do</url-pattern>
        <url-pattern>/workbench/customer/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/customer/checkCustomerName.do</url-pattern>
        <url-pattern>/workbench/customer/getContact.do</url-pattern>
        <url-pattern>/workbench/customer/delContact.do</url-pattern>
    </servlet-mapping>

    <!-- 联系人 -->
    <servlet>
        <servlet-name>contact</servlet-name>
        <servlet-class>com.wkcto.crm.workbench.controller.ContactController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contact</servlet-name>
        <url-pattern>/workbench/contact/save.do</url-pattern>
        <url-pattern>/workbench/contact/getContact.do</url-pattern>
        <url-pattern>/workbench/contact/page.do</url-pattern>
        <url-pattern>/workbench/contact/getOne.do</url-pattern>
        <url-pattern>/workbench/contact/update.do</url-pattern>
        <url-pattern>/workbench/contact/delete.do</url-pattern>
        <url-pattern>/workbench/contact/exportCheckAll.do</url-pattern>
        <url-pattern>/workbench/contact/exportAll.do</url-pattern>
        <url-pattern>/workbench/contact/import.do</url-pattern>
        <url-pattern>/workbench/contact/detail.do</url-pattern>
        <url-pattern>/workbench/contact/remarkSave.do</url-pattern>
        <url-pattern>/workbench/contact/getRemarkList.do</url-pattern>
        <url-pattern>/workbench/contact/updateRemark.do</url-pattern>
        <url-pattern>/workbench/contact/deleteRemark.do</url-pattern>
        <url-pattern>/workbench/contact/getActivity.do</url-pattern>
        <url-pattern>/workbench/contact/dissociated.do</url-pattern>
        <url-pattern>/workbench/contact/getNeverRelationActivity.do</url-pattern>
        <url-pattern>/workbench/contact/relationClueAndActivity.do</url-pattern>
        <url-pattern>/workbench/contact/alertMsg.do</url-pattern>
    </servlet-mapping>

    <!-- 交易 -->
    <servlet>
        <servlet-name>tran</servlet-name>
        <servlet-class>com.wkcto.crm.workbench.controller.TranController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tran</servlet-name>
        <url-pattern>/workbench/tran/autoCompleteCustomer.do</url-pattern>
        <url-pattern>/workbench/tran/save.do</url-pattern>
        <url-pattern>/workbench/tran/getTranByCustomerId.do</url-pattern>
        <url-pattern>/workbench/tran/getTranByContactsId.do</url-pattern>
        <url-pattern>/workbench/tran/delTran.do</url-pattern>
        <url-pattern>/workbench/tran/page.do</url-pattern>
        <url-pattern>/workbench/tran/edit.do</url-pattern>
        <url-pattern>/workbench/tran/update.do</url-pattern>
        <url-pattern>/workbench/tran/delete.do</url-pattern>
        <url-pattern>/workbench/tran/exportAll.do</url-pattern>
        <url-pattern>/workbench/tran/exportCheckAll.do</url-pattern>
        <url-pattern>/workbench/tran/import.do</url-pattern>
        <url-pattern>/workbench/tran/detail.do</url-pattern>
        <url-pattern>/workbench/tran/getHistoryList.do</url-pattern>
        <url-pattern>/workbench/tran/changeStage.do</url-pattern>
        <url-pattern>/workbench/tran/getRemarkList.do</url-pattern>
        <url-pattern>/workbench/tran/remarkSave.do</url-pattern>
        <url-pattern>/workbench/tran/updateRemark.do</url-pattern>
        <url-pattern>/workbench/tran/deleteRemark.do</url-pattern>
    </servlet-mapping>


    <!-- 统计图表 -->
    <servlet>
        <servlet-name>charts</servlet-name>
        <servlet-class>com.wkcto.crm.workbench.controller.ChartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>charts</servlet-name>
        <url-pattern>/workbench/chart/tran.do</url-pattern>
    </servlet-mapping>








</web-app>